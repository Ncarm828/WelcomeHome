<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/scrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <requestFocus />

        <TextView
            android:text="Profile Page Setting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textColor="@android:color/black"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="text"
            android:hint="Enter Name Of Profile"
            android:layout_below="@+id/textView"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:paddingTop="35dp">
        </EditText>

        <Button
            android:id="@+id/CameraPictureSetting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Camera Picture"
            style="@style/Widget.AppCompat.Button"
            android:layout_below="@+id/editTextName"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/ProfilePicture"
            android:layout_toLeftOf="@+id/ProfilePicture"
            />

        <Button
            android:text="Web Picture"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/WenPictureSettings"
            android:layout_below="@+id/CameraPictureSetting"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:elevation="0dp"
            android:layout_toLeftOf="@+id/SaveSettingsButton"
            android:layout_toStartOf="@+id/SaveSettingsButton" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/ProfilePicture"
            android:layout_below="@+id/editTextName"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_alignBottom="@+id/WenPictureSettings"
            android:layout_alignLeft="@+id/SaveSettingsButton"
            android:layout_alignStart="@+id/SaveSettingsButton"
            />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Would you like to make this Profile your default?"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:layout_below="@+id/WenPictureSettings"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_toStartOf="@+id/DefaultToggleButton"
            android:layout_toLeftOf="@+id/DefaultToggleButton"
            android:paddingBottom="35dp"
            android:paddingTop="35dp"/>

        <Button
            android:id="@+id/SaveSettingsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/save"
            android:layout_below="@+id/textView3"
            android:layout_centerHorizontal="true" />

        <ToggleButton
            android:text="ToggleButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/DefaultToggleButton"
            android:layout_alignBaseline="@+id/textView3"
            android:layout_alignBottom="@+id/textView3"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <Button
            android:text="Cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView3"
            android:layout_toRightOf="@+id/SaveSettingsButton"
            android:layout_toEndOf="@+id/SaveSettingsButton"
            android:id="@+id/CancelButton" />


    </RelativeLayout>
</ScrollView>
