<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.philips.lighting.quickstart"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="23" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.AppCompat.Light" >
        <activity
            android:name="com.philips.lighting.quickstart.Activity.PHHomeActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.philips.lighting.quickstart.Activity.MyApplicationActivity"
            android:label="@string/txt_selectbridges" />
        <activity
            android:name="com.philips.lighting.quickstart.Activity.PHPushlinkActivity"
            android:label="@string/app_name" />
        <activity
            android:name="com.philips.lighting.quickstart.Activity.SplashScreen"
            android:theme="@style/SplashTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.philips.lighting.quickstart.Activity.StartActivity"
            android:label="@string/title_activity_start" />
    </application>

</manifest>